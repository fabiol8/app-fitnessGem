rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users hierarchy: users/{userId}/...
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid != null;

      match /progress/{dateDoc} {
        allow read, write: if request.auth != null && request.auth.uid != null;
      }
      match /state/{stateKey} {
        allow read, write: if request.auth != null && request.auth.uid != null;
      }
    }
  }
}

